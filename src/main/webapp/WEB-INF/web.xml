<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    
    <welcome-file-list>
        <welcome-file>/login-page.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.digi.controller.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VerificationServlet</servlet-name>
        <servlet-class>com.digi.controller.VerificationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerificationServlet</servlet-name>
        <url-pattern>/verify-email</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>com.digi.controller.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/reset-password</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InputTokenServlet</servlet-name>
        <servlet-class>com.digi.controller.InputTokenServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InputTokenServlet</servlet-name>
        <url-pattern>/input-token</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>com.digi.controller.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/change-password</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.digi.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login-page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddAddressServlet</servlet-name>
        <servlet-class>com.digi.controller.AddAddressServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAddressServlet</servlet-name>
        <url-pattern>/add-address</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HomePageServlet</servlet-name>
        <servlet-class>com.digi.controller.HomePageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePageServlet</servlet-name>
        <url-pattern>/home-page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OldPasswordServlet</servlet-name>
        <servlet-class>com.digi.controller.OldPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OldPasswordServlet</servlet-name>
        <url-pattern>/old-password</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditProfileServlet</servlet-name>
        <servlet-class>com.digi.controller.EditProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditProfileServlet</servlet-name>
        <url-pattern>/edit-profile</url-pattern>
    </servlet-mapping>
</web-app>
